<div class="wrap">
  <nav class="nav-bar navbar-default" role="navigation">
      <div id ="top-menu" class="container-fluid active">
          <a class="navbar-brand" href="/">NextPakk</a>
          <%= render 'layouts/user_nav' %>
      </div>      
  </nav>
  <%= render 'layouts/user_side_nav' %>
  
  <!--Body content-->
  <div class="content">
    <div class="top-bar" style="background: whitesmoke !important;">       
      <a href="#menu" class="side-menu-link burger"> 
        <span class='burger_inside' id='bgrOne'></span>
        <span class='burger_inside' id='bgrTwo'></span>
        <span class='burger_inside' id='bgrThree'></span>
      </a>      
    </div>
    <section class="content-inner">
          <% if user_signed_in? %>
                
                <h2 style="padding-bottom: 20px;"></h2>
                <div class="row" style="margin-top:-30px;">
                  <div class="col-lg-12">
                    <div class="row">
                    <div style="background-color:transparent; height:100px">
                      <div class="col-1g-1 tile-icon " style="height:100px; width:50%; float:left;"><a href="/" class="cust-block-icons" style="color: #b0b0b0 !important;">Delivery</a>
                          
                        </div>

                      <div class="col-1g-1 tile-icon " style="background-color:#0f0; height:100px; width:50%; float:left; border-left: 1px solid;">
                          <a href="paqs/pickup" class="cust-block-icons">Pickup</a>
                        </div>
                      </div>
                    </div>


                    <div class="row" style="display: none;">
                    <div style="background-color:transparent; height:100px">
                      <div class="col-1g-1 tile-icon " style="height:100px; width:50%; float:left;"><a href="/" class="cust-block-icons" style="color: #b0b0b0 !important;"><i class=" fa fa-truck "></i></a>
                          
                        </div>
                      <div class="col-1g-1 tile-icon " style="background-color:#0f0; height:100px; width:50%; float:left;">
                          <a href="paqs/pickup" class="cust-block-icons""><i class="glyphicon glyphicon-thumbs-up"></i></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                    <hr>
                        <% if Order.exists?(user_id: current_user.id) %>
                            <% for order in @order %>
                            <div class="row" style="display: none;">
                              <div class="col-xs-4">
                                <a href="#"><h3><%= order.order_packnum %></h3></a>
                              </div>
                              <div class="col-xs-4">
                                <a href="#"><h3><%= order.order_size %></h3></a>
                              </div>
                              <div class="col-xs-4">
                                <a href="#"><h3><%= order.order_description %></h3></a>
                              </div>
                            </div>
                            <table class="table">
                            <tr><h2 style="text-align: center;">New Order Available For Delivery</h2></tr>
                              <th>NextPack #</th>
                              <th>Description</th>
                              <th>Size</th>
                              <th>Schedule</th>
                              <tr>
                              <td><h4><%= order.order_packnum %></h4></td>
                              <td><h4><%= order.order_description %></h4></td>
                              <td><h4><%= order.order_size %></h4></td>
                              <% if Order.exists?(user_id: current_user.id) || current_user.admin? %>
                                <td>
                                <%= link_to "Schedule Delivery", new_delivery_path, class: "btn btn-default btn-xs" %>
                                </td>
                              </tr>
                            </table>
                            <%= @delivery %>
                              
                              <% end %>
                            <% end %>
                        <% else %>
                            
                            <div class="cust-mob-body-text">
                             <h3 style="color: orange!important;">No orders available at this time.</h3>
                             <hr>
                            <p class="mobile-para">Online purchases sent to your NextPakk address will show up here when they're ready
                            to be delivered.</p>
                            </div>
                        <% end %>
                  <% else %>
                      <br /><br /><br /><div class="mobile-body">
                      <%= image_tag "https://s3.amazonaws.com/nextpakkweb/Delivery-man-makes-his-rounds.jpg", class: "img-responsive" %>
                        <h1></h1>
                        <h4>Tired of miss deliveries, stolen packages and packages left in the snow and rain?
                        </h4>

                        <h4>NextPakk, the Smart, Secure, Convenient way for package delivery! Schedule delivery to your home 7 days a week from 6pm to midnight "We've Got Your Pack"
                        </h4><br />
                      </div>
                      <div class="row" style="margin:0px;">
                    <div class="col-lg-12">
                      <div class="row">
                      <div style="background-color: transparent; height:50px">
                        <a href="/users/sign_in"><span class="col-1g-1 text-center" style="background-color:transparent; height:50px; width:48%; float:left; line-height: 50px; color: #b0b0b0; border-radius: 10px; border: 2px solid #b0b0b0 !important; font-size: 20px; cursor: inherit; display: inline-block; margin-right: 2px;">
                            <span class="glyphicon glyphicon-log-in" style="font-size: 20px;"></span> Login
                          </span></a>
                        <a href="/users/sign_up"><span class="col-1g-1 text-center" style="background-color:transparent; height:50px; width:48%; float:left; line-height: 50px; color: #b0b0b0; border-radius: 10px; border: 2px solid #b0b0b0 !important; font-size: 20px; cursor: inherit; display: inline-block; margin-left: 2px;">
                            <span class="glyphicon glyphicon-pencil" style="font-size: 20px;"></span> Signup
                          </span></a>
                        
                        </div>
                      </div>
                    </div>
                      <div class="container" style="display: none;">
                    
                        <div class="row">
                          <div class="col-xs-6">
                              <%= link_to "login", new_user_session_path, class: "btn btn-info btn-lg" %>
                            </div>
                          <div class="col-xs-6">
                              <%= link_to "sign up", new_user_registration_path, class: "btn btn-info btn-lg " %>
                            </div>
                        </div>
                      </div>
                  <% end %>
                </div>
                <br />
                      <% if user_signed_in? && current_user.admin? %>
                <table class="table table-hover table-condensed" style="display: none;">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Address</th>
                      <th>Phone</th>
                      <th>Size</th>
                        <th colspan="2"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @deliveries.each do |delivery| %>
                      <tr>
                        <td><%= link_to delivery.name, delivery %></td>
                        <td><%= link_to delivery.address, "http://maps.google.com/?q=#{delivery.address}" %></td>
                        <td><%= delivery.phone %></td>
                        <td><%= link_to delivery.size, delivery.size %></td> 
                          <td><%= link_to 'Edit', edit_delivery_path(delivery), class: "btn btn-link" %></td>
                          <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

    </section>
  </div>  
  
</div>

