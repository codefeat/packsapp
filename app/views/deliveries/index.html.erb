<div id="throbber" style="display:none; min-height:120px;"></div>
<div id="noty-holder"></div>
<div id="wrapper">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
     <%= render 'layouts/navbartop' %>
     <% if user_signed_in? %>
     <%= render 'layouts/navbar' %>
      

       <%= render 'layouts/navbarside' %>
     <% end %>
  </nav>

    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row" id="main" >
                <% if user_signed_in? %>
                
                    <div class="row" style="display: none;">
                        <div class="profile-header-container" >   
                            <div class="profile-header-img">
                            <%= image_tag current_user.image, class: "img-responsive img-circle center-block" %>                            <!-- badge -->
                                <div class="rank-label-container">
                                    <span class="label label-default rank-label">Hi <%= current_user.first_name %></span>
                                </div>
                            </div>
                        </div> 
                    </div>
                <div class="step1">
                <h2></h2>
                <h2 style="padding-bottom: 20px;"></h2>
                <div class="row" style="margin:0px;">
                  <div class="col-lg-12">
                    <div class="row">
                    <div style="background-color:transparent; height:100px">
                      <div class="col-1g-1 tile-icon " style="height:100px; width:50%; float:left;"><a href="/" class="cust-block-icons" style="color: #b0b0b0 !important;">Delivery</a>
                          
                        </div>

                      <div class="col-1g-1 tile-icon " style="background-color:#0f0; height:100px; width:50%; float:left; border-left: 1px solid;">
                          <a href="paqs/pickup" class="cust-block-icons">Pickup</a>
                        </div>
                      </div>
                    </div>


                    <div class="row" style="display: none;">
                    <div style="background-color:transparent; height:100px">
                      <div class="col-1g-1 tile-icon " style="height:100px; width:50%; float:left;"><a href="/" class="cust-block-icons" style="color: #b0b0b0 !important;"><i class=" fa fa-truck "></i></a>
                          
                        </div>
                      <div class="col-1g-1 tile-icon " style="background-color:#0f0; height:100px; width:50%; float:left;">
                          <a href="paqs/pickup" class="cust-block-icons""><i class="glyphicon glyphicon-thumbs-up"></i></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                    <hr>
                        <% if Order.exists?(user_id: current_user.id) %>
                            <% for order in @order %>
                            <div class="row" style="display: none;">
                              <div class="col-xs-4">
                                <a href="#"><h3><%= order.order_packnum %></h3></a>
                              </div>
                              <div class="col-xs-4">
                                <a href="#"><h3><%= order.order_size %></h3></a>
                              </div>
                              <div class="col-xs-4">
                                <a href="#"><h3><%= order.order_description %></h3></a>
                              </div>
                            </div>
                            <table class="table">
                            <tr><h2>New Order Available For Delivery</h2></tr>
                              <th>NextPack #</th>
                              <th>Description</th>
                              <th>Size</th>
                              <th>Schedule</th>
                              <tr>
                              <td><h4><%= order.order_packnum %></h4></td>
                              <td><h4><%= order.order_description %></h4></td>
                              <td><h4><%= order.order_size %></h4></td>
                              <% if Order.exists?(user_id: current_user.id) || current_user.admin? %>
                                <td>
                                <%= link_to "Schedule Delivery", new_delivery_path, class: "btn btn-default btn-xs" %>
                                </td>
                              </tr>
                            </table>
                            <%= @delivery %>
                              
                              <% end %>
                            <% end %>
                        <% else %>
                            
                            <div class="cust-mob-body-text">
                             <h3 style="color: orange!important;">No orders available at this time.</h3>
                             <hr>
                            <p class="mobile-para">Online purchases sent to your NextPakk address will show up here when they're ready
                            to be delivered.</p>
                            </div>
                        <% end %>
                  <% else %>
                      <div class="mobile-body">
                        <h1>NextPakk</h1>
                        <h4>The Smart, Secure, Convenient way for package delivery! "We've Got Your Pack"
                        </h4><br />
                      </div>
                      <%= link_to "login", new_user_session_path, class: "btn btn-info" %>
                      <%= link_to "sign up", new_user_registration_path, class: "btn btn-info " %>
                  <% end %>
                    
                </div><br />
                      <% if user_signed_in? && current_user.admin? %>
                <table class="table table-hover table-condensed" style="display: none;">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Address</th>
                      <th>Phone</th>
                      <th>Size</th>
                        <th colspan="2"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @deliveries.each do |delivery| %>
                      <tr>
                        <td><%= link_to delivery.name, delivery %></td>
                        <td><%= link_to delivery.address, "http://maps.google.com/?q=#{delivery.address}" %></td>
                        <td><%= delivery.phone %></td>
                        <td><%= link_to delivery.size, delivery.size %></td> 
                          <td><%= link_to 'Edit', edit_delivery_path(delivery), class: "btn btn-link" %></td>
                          <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>
                
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div><!-- /#wrapper -->
</div>



