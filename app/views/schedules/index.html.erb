<div id="throbber" style="display:none; min-height:120px;"></div>
<div id="noty-holder"></div>
<div id="wrapper">
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
     <%= render 'layouts/navbartop' %>
     <% if user_signed_in? %>
       <%= render 'layouts/navbarright' %>
       <%= render 'layouts/navbarside' %>
     <% end %>
  </nav>
 
    
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row" id="main" >
                
                <div class="row">
                    <div class="profile-header-container">   
                        <div class="profile-header-img">
                        <%= image_tag current_user.image, class: "img-responsive img-circle center-block" %>                            <!-- badge -->
                            <div class="rank-label-container">
                                <span class="label label-default rank-label"><%= current_user.first_name %></span>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="step1">
                <h1>Scheduled Delivery</h1>
                  <table>
                    <thead>
                      <tr>
                        <th>Day</th>
                        <th>Date</th>
                        <th>Window</th>
                        <th>Delivery</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @schedules.each do |schedule| %>
                        <tr>
                        <td><%= schedule.day.strftime("%A") %> </td>
                          <td> <%= schedule.day %></td>
                          <td><%= schedule.slot.window %></td>
                          <td><%= schedule.delivery_id %></td>
                          <td><%= link_to 'Show', schedule %></td>
                          <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
                          <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <br>

<%= link_to 'New Schedule', new_schedule_path %>

            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
</div><!-- /#wrapper -->


